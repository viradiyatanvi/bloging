<style>
    .card {
        border: 1px solid #ddd;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        margin: 20px;
        overflow: hidden;
        background-color: #fff;
        display: flex; 
        align-items: center;
    }

    .card img {
        display: block;
        margin: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
        width: 150px; 
        height: 150px;
        object-fit: cover;
        margin-left: 200px;
    }

    .card-content {
        padding: 15px;
        flex-grow: 1;
    }

    .card-title {
        font-size: 1.25rem;
        color: #333;
        font-weight: bold;
        margin-bottom: 10px;
    }

    .card a {
        display: inline-block;
        margin-top: 10px;
        color: #007bff;
        text-decoration: none;
        font-size: 1.2rem;
    }

</style>

<div class="card">
    <img src="<%= locals.user.image %>" width="100px" height="100px" style="border-radius: 10px;" alt="Admin Image">
    <div class="card-content">
        <h5 class="card-title" style="text-align: left;">Static Table</h5>
        <div style="margin-left: 50px;">
            <a href="/updatedata/<%= locals.user._id %>"><i class="fa fa-edit"></i> Edit</a>
       
                    <div>
                        <p scope="col"><strong>Name :</strong><%= locals.user.name %></p>
                        <p scope="col"><strong>Email :</strong><%= locals.user.email %></p>
                        <p scope="col"><strong>Gender :</strong><%= locals.user.gender %></p>
                        <p scope="col"><strong>Hobby :</strong><%= locals.user.hobby %></p>
                        <p scope="col"><strong>State :</strong><%= locals.user.state %></p>
                    </div>
        </div>
    </div>
</div>
