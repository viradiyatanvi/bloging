    
  <%- include('header') %>
  
  <style>
.userrister {
    width: 30%;
    margin: 30px auto;
    padding: 20px;
    background-color: #f9f9f9;
    border: 1px solid #ccc;
    border-radius: 10px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
  }
  
  .input-group {
    margin-bottom: 15px;
  }
  
  .input-group label {
    display: block;
    margin-bottom: 10px;
  }
  
  .input-group input[type="text"],
  .input-group input[type="email"],
  .input-group input[type="password"] {
    height: 15px;
    padding: 10px;
    font-size: 16px;
    border: 1px solid #ccc;
    border-radius: 5px;
    width: 90%;
  }
  
  .btn-primary {
    width: 100%;
    height: 40px;
    font-size: 16px;
    background-color: rgba(255, 68, 0, 0.679);
    color: #fff;
    border: none;
    border-radius: 5px;
    cursor: pointer;
  }
  
  .btn-primary:hover {
    background-color: rgba(255, 68, 0, 0.805);
  }
  </style>
  
  <h1>Register Page</h1>
  <form action="/userregisterdata" method="post" align="center" class="userrister">
    <div class="input-group">
      <!-- <label>Enter UserName</label> -->
      <input type="text" name="username" placeholder="Enter UserName"/>
    </div>
    
    <div class="input-group">
      <!-- <label>Enter email</label> -->
      <input type="email" name="email" placeholder="Enter Email"/>
    </div>
    
    <div class="input-group">
      <!-- <label>Enter password</label> -->
      <input type="password" name="password" placeholder="Enter Password"/>
    </div>
    
    <div class="input-group">
      <!-- <label>Enter confirmpassword</label> -->
      <input type="password" name="confirmpassword" placeholder="Enter ConfirmPassword"/>
    </div>
    
    <input type="submit" name="submit" class="btn-primary"/>
  </form>
  